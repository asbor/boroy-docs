{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: up",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Start development environment with Docker Compose"
    },
    {
      "label": "Dev: down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Stop development environment"
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "${workspaceFolder}:/docs",
        "squidfunk/mkdocs-material",
        "build"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Build documentation site"
    },
    {
      "label": "Dev: logs",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "logs", "-f"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Follow development environment logs"
    }
  ]
}